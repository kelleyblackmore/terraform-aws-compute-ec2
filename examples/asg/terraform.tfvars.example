# Example terraform.tfvars for ASG example
# Copy this to terraform.tfvars and customize for your needs

# AWS Configuration
aws_region = "us-east-1"

# Project Configuration
project     = "myapp"
environment = "dev"

# Instance Configuration
instance_type    = "t3.micro"
min_size         = 1
max_size         = 3
desired_capacity = 2

# Optional: SSH key pair name
# key_name = "my-key-pair"

# Security Configuration - REQUIRED for access
# Get your IP: curl -s https://checkip.amazonaws.com

# HTTP Access (REQUIRED for web servers)
allowed_http_cidr_blocks = ["0.0.0.0/0"]  # Public access

# Alternative: Restrict to specific IPs
# allowed_http_cidr_blocks = ["1.2.3.4/32", "5.6.7.8/32"]

# SSH Access (disabled by default - enable for debugging)
enable_ssh_access       = false
# allowed_ssh_cidr_blocks = ["1.2.3.4/32"]  # Your IP only

# Example Scenarios:
#
# 1. Production Public Web (behind ALB):
#    allowed_http_cidr_blocks = ["sg-alb123"]  # ALB security group
#    enable_ssh_access        = false          # Use SSM Session Manager
#
# 2. Development/Testing:
#    allowed_http_cidr_blocks = ["0.0.0.0/0"]
#    enable_ssh_access        = true
#    allowed_ssh_cidr_blocks  = ["YOUR_IP/32"]
#
# 3. Internal Application:
#    allowed_http_cidr_blocks = ["10.0.0.0/8"]  # VPC CIDR
#    enable_ssh_access        = false
